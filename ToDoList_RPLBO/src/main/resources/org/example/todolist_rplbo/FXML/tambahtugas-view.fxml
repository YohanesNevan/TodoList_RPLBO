<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.todolist_rplbo.TambahTugasController"
            prefWidth="500" prefHeight="400">

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label text="Tambah Tugas Baru" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Judul Tugas:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="judulField" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>

                <Label text="Deskripsi:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextArea fx:id="deskripsiArea" GridPane.rowIndex="1" GridPane.columnIndex="1" prefRowCount="5"/>

                <Label text="Tanggal Mulai:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="tanggalMulaiPicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Tanggal Selesai:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="tanggalSelesaiPicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Batal" onAction="#handleBatal" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                <Button text="Simpan" onAction="#handleSimpan" style="-fx-background-color: #2E8B57; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
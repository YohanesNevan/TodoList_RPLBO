<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.todolist_rplbo.DashboardController"
            prefWidth="800.0" prefHeight="500.0">

    <!-- Sidebar Menu -->
    <left>
        <VBox spacing="10" prefWidth="150"
              style="-fx-background-color: #2E8B57;"
              alignment="TOP_CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Label text="To-do List" textFill="white" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Button text="Dashboard" onAction="#handleDashboard" maxWidth="Infinity" />
                <Button text="Riwayat" onAction="#handleRiwayat" maxWidth="Infinity" />
                <Button text="Akun" onAction="#handleAkun" maxWidth="Infinity" />
                <Button text="Logout" onAction="#handleLogout" maxWidth="Infinity" />
            </children>
        </VBox>
    </left>

    <!-- Konten Utama -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <HBox spacing="10">
                    <children>
                        <Label text="Daftar Tugas" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                        <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
                        <Button text="+ Tambah Tugas" onAction="#handleTambahTugas" />
                    </children>
                </HBox>

                <TableView fx:id="taskTable" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colNama" text="Nama Tugas" prefWidth="200" />
                        <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="150" />
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="100" />
                        <TableColumn fx:id="colAksi" text="Aksi" prefWidth="150" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.todolist_rplbo.Controller.ProfileAkunController">

    <!-- Konten Utama (full width tanpa sidebar) -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">
            <!-- Header -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E8B57;"
                   text="Profil Akun" />

            <!-- Card Profile (lebih besar) -->
            <VBox alignment="CENTER" spacing="15"
                  style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30 50; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label fx:id="namaLabel"
                       style="-fx-font-size: 28px; -fx-font-weight: bold;" />
            </VBox>

            <!-- Tombol Kembali -->
            <Button onAction="#handleDashboard"
                    text="Kembali ke Dashboard"
                    style="-fx-background-color: #2E8B57; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 25; -fx-background-radius: 5;"/>
        </VBox>
    </center>
</BorderPane>